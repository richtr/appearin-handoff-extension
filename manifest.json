{
	"manifest_version": 2,
	"name": "Appear.in Handoff",
	"default_locale": "en",
	"description": "__MSG_extensionDescription__",
	"version": "0.9.0",
	"homepage_url": "https://github.com/operasoftware/appearin-handoff",
	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	},
	"permissions": [
		"tabs",
		"https://*/*",
		"storage",
		"http://*/*"
	],
	"background": {
		"page": "index.html"
	},
	"content_scripts": [
		{
			"js": [
				"js/oex-injected.min.js",
				"js/oauth-fix.js"
			],
			"matches": [
				"*://appengine.google.com/_ah/loginform*",
				"*://code.google.com/p/chrometophone/logo*"
			],
			"run_at": "document_start",
			"all_frames": true
		},
		{
			"js": [
				"js/oex-injected.min.js",
				"js/appearin-ject.js"
			],
			"matches": [
				"*://appear.in/*",
				"*://*.appear.in/*"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'unsafe-eval';"
}
